<!DOCTYPE html>
<html>
  <head>
    <title>The Rick & Morty App aaa</title>
    <h1> The Rick & Morty App </h1>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="container">
      <div class="row">
        <div class="col-lg-12 mt-5">
          <% if flash[:alert] %>
            <div class="alert alert-warning"><%= flash[:alert] %></div>
          <% end %>
          <div class="mx-auto mt-5" style="width: 400px">
            <%= form_with(url: search_path, method: 'get', local: true) do %>
              <div class="form-group">
                <h4><%= label_tag :id, 'Search for a Rick & Morty episode, character or location by its name'%></h4>
                <%= text_field_tag :id, nil, placeholder: 'Eg. Pilot, Rick SÃ¡nchez, Earth (C-137)', class: 'form-control' %>
              </div>
              <p></p>
              <%= button_tag 'Search', class: 'btn btn-success btn-block' %>
            <% end %>
          </div>
        </div>
      </div>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
